<div class="container-fluid mt-lg-5 mb-5">
<div class="row">
<div class="col-lg-3"></div>
<div class="col-lg-6">
<div class="card">
<div class="card-body w-auto align-self-center">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { required: false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :name,
                required: true,
				autofocus: true,
                input_html: { autocomplete: "name", class: 'form-control', placeholder: 'Your full name' } %>
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email", class: 'form-control', placeholder: 'Your email' }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: 'form-control', placeholder: 'Password' } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm password' } %>
 
  <div class="form-actions mt-2 btn btn-primary">
    <%= f.button :submit, "Sign up" %>
  </div>
  </div>

<% end %>
<%= render "devise/shared/links" %>
</div>

</div>
</div>
<div class="col-lg-3"></div>
</div>
</div>
